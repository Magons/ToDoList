$(function() {
	$('#content').on("click", '.prioritise', function(){
		var task_id = $(this).data('task-id');
		var project_id =  $(this).data('project-id');
    var directive = $(this).data('directive');
		$.ajax({
      type: "patch",
      url: "/projects/"+project_id+"/tasks/" + task_id + "/" + directive 
  	});
	});
});