$(function() {
	$('#content').on("click", '.task_up', function(){
		var task_id = $(this).data('task-id');
		var project_id =  $(this).data('project-id');
		$.ajax({
      type: "patch",
      url: "/projects/"+project_id+"/tasks/" + task_id + "/task_up" 
  	});
	});

	$('#content').on("click", '.task_down', function(){
		var task_id = $(this).data('task-id');
		var project_id =  $(this).data('project-id');
		$.ajax({
      type: "patch",
      url: "/projects/"+project_id+"/tasks/" + task_id + "/task_down" 
  	});
	});
});