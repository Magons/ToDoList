<% if @task.errors.present? %>
	<% @task.errors.full_messages.each do |message| %>
		$('#tasks_errors_' + "<%=@project.id%>").html('<%= j message %>')
	<% end %>
<% else %>
	$('#tasks_' + "<%=@project.id%>").html('<%= j render "tasks/list", project: @project %>');	
	$('#title_' + "<%=@project.id%>").val('');
	$('#tasks_errors_' + "<%=@project.id%>").html('');

	showFlashMesage('<%= j render "layouts/flash" %>');
	
	
<% end %>